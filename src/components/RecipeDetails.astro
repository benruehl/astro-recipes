---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

type Recipe = CollectionEntry<'recipes'>;

interface Props {
  recipe: Recipe;
}

const { recipe } = Astro.props;
const { Content } = await recipe.render();
---

<aside>
    <Image src={recipe.data.image} alt={recipe.data.title}/>
    <h3>{recipe.data.title}</h3>
    <p>{recipe.data.subtitle}</p>
    <Content/>
</aside>

<style lang="scss">
    aside {
        position: sticky;
        top: 0;
        align-self: start;
        background: white;
        border-radius: 1rem;
        padding: 1rem;
    }

    img {
        width: calc(100% + 1rem);
        height: auto;
        aspect-ratio: 16 / 9;
        object-fit: cover;
        border-radius: .8rem;
        margin: -0.5rem;
    }

    h3 {
        margin-bottom: 0;
    }

    p {
        margin: 0;
        color: #808080;
    }
</style>