---
import { Image, getImage } from 'astro:assets';
import titleTextArt from "../../images/title-text-art.svg";
import patternImage from "../../images/wave-pattern.svg";
import HeroBowl from './HeroBowl.astro';

const optimizedPatternImage = await getImage({ src: patternImage });
---

<section class="hero">
    <div class="background-pattern" style={`background-image: url('${optimizedPatternImage.src}')`}></div>
    <div class="text-container">
        <h1>
            <Image class="title" src={titleTextArt} alt="Benjamins Bowls" height="250"/>
        </h1>
        <p>
            Ausgewählte Rezepte für Bowls und deren Komponenten sowie einige Grillbeilagen und Salate.
            Guten Appetit!
        </p>
    </div>
    <HeroBowl/>
</section>

<style lang="scss">
    .hero {
        --negative-margin: 0rem;
        @media (min-width: 1270px) {
            --negative-margin: 2rem;
        }
        
        display: flex;
        align-items: stretch;
        justify-content: space-between;
        gap: 2rem;
        flex-wrap: wrap;
        margin-top: 5rem;
        margin-left: calc(var(--negative-margin) * -1);
        margin-right: calc(var(--negative-margin) * -1);
        position: relative;
        overflow-y: clip;

        @media (min-width: $md) {
            padding: calc(var(--negative-margin) + 4rem) calc(var(--negative-margin) + min(4rem, 10vw));
            background: rgba(22, 22, 22, .85);
            backdrop-filter: blur(20px);
            border-radius: 2rem;
        }

        /* gradient border */
        &::before {
            content: "";
            position: absolute;
            inset: 0;
            padding: 1px; /* border thickness  */
            background: conic-gradient(
                from 180deg,
                #e2b269,
                transparent 30deg,
                transparent 70%,
            );
            border-radius: inherit;
            mask: conic-gradient(#000 0 0) content-box exclude,conic-gradient(#000 0 0);
            pointer-events: none;

            @media (min-width: $md) {
                background: conic-gradient(
                    from 180deg,
                    #161616 20%,
                    #e7dd93,
                    #e0f27b,
                    #99f27b,
                    #161616 72%,
                    #161616 78%,
                    #e2b269 80%,
                    #161616 95%,
                );
            }
        }

        /* inset texture */
        &::after {
            content: "";
            position: absolute;
            inset: -1rem;
            border-radius: calc(2rem - 6px);
            background: linear-gradient(
                to bottom right,
                transparent 50%,
                rgba(238, 167, 67, 0.2)
            );
            pointer-events: none;
            z-index: -1;

            @media (min-width: $md) {
                inset: 8px;
            }
        }

        .background-pattern {
            position: absolute;
            inset: 8px;
            border-radius: calc(2rem - 6px);
            background-size: 320px 320px;
            mix-blend-mode: color-burn;
            mask-image: linear-gradient(
                to bottom right,
                transparent 40%,
                rgba(0, 0, 0, .05) 55%,
                rgba(0, 0, 0, .1) 60%,
                rgba(0, 0, 0, .2) 70%,
                rgba(0, 0, 0, .5) 80%,
                black
            );
            opacity: .5;
            z-index: -1;
        }
    }

    .title {
        max-width: 100%;
        height: auto;
    }

    h1 {
        text-align: left;
        margin-top: 0;
    }

    p {
        font-size: 1.2rem;
        max-width: 500px;
        color: #ede1c9;
    }
</style>
