---
import { Image, getImage } from 'astro:assets';
import titleTextArt from "../../images/title-text-art.svg";
import patternImage from "../../images/wave-pattern.svg";
import HeroBowl from './HeroBowl.astro';
import Button from '../common/Button.astro';

const optimizedPatternImage = await getImage({ src: patternImage });
---

<section class="hero">
    <div class="background-pattern" style={`background-image: url('${optimizedPatternImage.src}')`}></div>
    <div class="text-container">
        <h1>
            <Image class="title" src={titleTextArt} alt="Benjamins Bowls" height="250"/>
        </h1>
        <p>
            Ausgewählte Rezepte für Bowls und deren Komponenten sowie einige Grillbeilagen und Salate.
            Guten Appetit!
        </p>
        <div class="buttons-container">
            <Button href="#Beilagen">
                Beilagen
            </Button>
            <Button href="#Salate">
                Salate
            </Button>
            <Button href="#Dressings">
                Dressings
            </Button>
        </div>
    </div>
    <HeroBowl/>
</section>

<style lang="scss">
    .hero {        
        display: flex;
        align-items: stretch;
        justify-content: space-between;
        gap: 2rem;
        flex-wrap: wrap;
        margin-top: 5rem;
        margin-left: calc(var(--negative-margin) * -1);
        margin-right: calc(var(--negative-margin) * -1);
        position: relative;
        overflow-y: clip;

        @media (min-width: $md) {
            padding: 4rem 0;
        }

        /* inset background */
        &::after {
            content: "";
            position: absolute;
            top: 0;
            left: 50%;
            width: 100vw;
            height: 100%;
            transform: translateX(-50%);
            background:
                radial-gradient(circle at 30% 110%, rgba(151, 140, 152, 0.2), transparent 30%),
                radial-gradient(ellipse at 90% 115%, rgba(213, 149, 81, 0.35), transparent 40%)
            ;
            pointer-events: none;
            z-index: -1;

            @media (min-width: $md) {
                background:
                    radial-gradient(ellipse at 50% 140%, rgba(151, 140, 152, 0.2), transparent 30%),
                    radial-gradient(ellipse at 75% 115%, rgba(213, 149, 81, 0.35), transparent 30%)
                ;
            }
        }

        /* inset texture */
        .background-pattern {
            position: absolute;
            top: 0;
            left: 50%;
            width: 100vw;
            height: 100%;
            transform: translateX(-50%);
            background-size: 320px 320px;
            mix-blend-mode: color-burn;
            mask-image: radial-gradient(
                at 75% 100%,
                black,
                rgba(0, 0, 0, .5) 20%,
                rgba(0, 0, 0, .2) 30%,
                rgba(0, 0, 0, .1) 40%,
                rgba(0, 0, 0, .05) 55%,
                transparent 60%,
            );
            z-index: -1;
        }
    }

    .title {
        max-width: 100%;
        height: auto;
    }

    h1 {
        text-align: left;
        margin-top: 0;
    }

    p {
        font-size: 1.2rem;
        max-width: 500px;
        color: #ede1c9;
    }

    .buttons-container {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 4rem;
    }
</style>
