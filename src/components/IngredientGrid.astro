---
import type { CollectionEntry } from 'astro:content';
import IngredientCard from './IngredientCard.astro';

type Recipe = CollectionEntry<'recipes'>;

interface Props {
  recipe: Recipe;
}

const { recipe } = Astro.props;
---

<div class="recipe-details">
    <div class="ingredient-grid">
        {recipe.data.ingredients
            .filter(ingredient => ingredient.hasOwnProperty("amount"))
            .map(ingredient => (
                <IngredientCard ingredient={ingredient} size="large"/>
            )
        )}
    </div>
    <div class="ingredient-grid">
        {recipe.data.ingredients
            .filter(ingredient => !ingredient.hasOwnProperty("amount"))
            .map(ingredient => (
                <IngredientCard ingredient={ingredient} size="small"/>
            )
        )}
    </div>
</aside>

<style lang="scss">
    .recipe-details {
        grid-column: 1 / -1;
    }

    img {
        width: calc(100% + 1rem);
        height: auto;
        aspect-ratio: 16 / 9;
        object-fit: cover;
        border-radius: .8rem;
        margin: -0.5rem;
    }

    h3 {
        margin-bottom: 0;
    }

    p {
        margin: 0;
        color: #808080;
    }

    .ingredient-grid {
        display: flex;
        flex-wrap: wrap;
        gap: .5rem;

        &:not(:first-child) {
            margin-top: 1.5rem;
        }
    }
</style>