---
import { getImage, Image } from 'astro:assets';
import Tag from '../common/Tag.astro';
import ringImage from "../../images/ring.svg";
import veggyImage from "../../images/vegetarian.svg";

const optimizedRingImage = await getImage({ src: ringImage });
---

<div class="content-container">
    <div class="time" style={`background-image: url('${optimizedRingImage.src}')`}>
        <span>30</span>
    </div>
    <div class="icons">
        <Image src={veggyImage} alt="vegetarisch"/>
    </div>
    <div class="text">
        <h3>Coleslaw</h3>
        <div class="tags">
            <Tag>BBQ</Tag>
            <Tag>Kalt</Tag>
        </div>
        <p>Weniger Mayo als Ã¼blich. Passt zu BBQ und Burger.</p>
    </div>
</div>

<style lang="scss">
    .content-container {
        height: 140px;
        padding: 1rem 2rem 2rem 2rem;
        background: #3A3A3A;
        border-top: 8px solid #BE5D77;
        border-radius: 0 0 1rem 1rem;
        display: grid;
        grid-template-columns: 2rem 1fr;
        gap: 2rem;
        color: white;
        position: relative;
    }

    .icons {
        margin-top: 1rem;

        img {
            width: 100%;
            height: auto;
        }
    }

    .tags {
        display: flex;
        gap: 4px;
    }

    h3 {
        margin: 0 0 4px 0;
    }

    p {
        margin-top: .5em;
        color: #a7a7a7;
    }

    .time {
        position: absolute;
        top: -4px;
        left: 1rem;
        width: 72px;
        height: 72px;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #BE5D77;
        font-size: 28px;
        font-weight: bold;
        transform: translateY(calc(-50% - 5px));

        & > * {
            position: absolute;
            top: 15%;
        }

        &::after {
            content: "min";
            font-size: 14px;
            font-weight: 400;
            position: absolute;
            top: 55%;
        }
    }
</style>