---
import { getImage } from 'astro:assets';
import ringImage from "../../images/ring.svg";

const optimizedRingImage = await getImage({ src: ringImage });
---

<div class="content-container">
    <div class="time" style={`background-image: url('${optimizedRingImage.src}')`}>
        <span>30</span>
    </div>
    <h3>Coleslaw</h3>
    <p>mit Spitzkohl</p>
    <p>Weniger Mayo als Ã¼blich. Passt zu BBQ und Burger.</p>
</div>

<style lang="scss">
    .content-container {
        height: 130px;
        padding: 2rem 3rem;
        background: #3A3A3A;
        border-top: 8px solid #BE5D77;
        border-radius: 0 0 1rem 1rem;
        color: white;
        position: relative;
    }

    h3 {
        margin: 0;
        
        + p {
            margin-top: 0;
        }
    }

    p {
        color: #a7a7a7;
    }

    .time {
        position: absolute;
        top: 0;
        right: 3rem;
        width: 72px;
        height: 72px;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #BE5D77;
        font-size: 28px;
        font-weight: bold;
        transform: translateY(calc(-50% - 5px));

        & > * {
            position: absolute;
            top: 15%;
        }

        &::after {
            content: "min";
            font-size: 14px;
            font-weight: 400;
            position: absolute;
            top: 55%;
        }
    }
</style>