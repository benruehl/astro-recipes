---
import { getImage, Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import Time from './Time.astro';
import Tag from '../common/Tag.astro';
import veggyImage from "../../images/vegetarian.svg";

type Recipe = CollectionEntry<'recipes'>;

interface Props {
  recipe: Recipe;
}

const { recipe } = Astro.props;
const optimizedImage = await getImage({src: recipe.data.image});
---

<div class="content-container">
    <Time formattedTime={recipe.data.totalTime}/>
    <div class="icons">
        <Image src={veggyImage} alt="vegetarisch"/>
    </div>
    <div class="text">
        <h3>{recipe.data.title}</h3>
        <div class="tags">
            <Tag>BBQ</Tag>
            <Tag>Kalt</Tag>
        </div>
        <p>{recipe.data.tagline}</p>
    </div>
</div>

<style lang="scss">
    .content-container {
        height: 140px;
        padding: 1rem 2rem 2rem 2rem;
        background: #3A3A3A;
        border-top: 8px solid #BE5D77;
        border-radius: 0 0 1rem 1rem;
        display: grid;
        grid-template-columns: 2rem 1fr;
        gap: 2rem;
        color: white;
        position: relative;
    }

    .icons {
        margin-top: 1rem;

        img {
            width: 100%;
            height: auto;
        }
    }

    .tags {
        display: flex;
        gap: 4px;
    }

    h3 {
        margin: 0 0 4px 0;
    }

    p {
        margin-top: .5em;
        color: #a7a7a7;
    }
</style>