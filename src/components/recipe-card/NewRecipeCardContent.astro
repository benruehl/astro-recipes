---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import Time from './Time.astro';
import Tag from '../common/Tag.astro';
import veggyImage from "../../images/vegetarian.svg";
import veganImage from "../../images/vegan.svg";

type Recipe = CollectionEntry<'recipes'>;

interface Props {
  recipe: Recipe;
}

const { recipe } = Astro.props;
---

<div class="content-container">
    <Time formattedTime={recipe.data.totalTime}/>
    <div class="icons">
        {recipe.data.diet === "Vegetarian" && (
            <figure class="veggy">
                <Image src={veggyImage} alt="vegetarisch" width={36}/>
                <figcaption>veggy</figcaption>
            </figure>
        )}
        {recipe.data.diet === "Vegan" && (
            <figure class="vegan">
                <Image src={veganImage} alt="vegan" width={36}/>
                <figcaption>vegan</figcaption>
            </figure>
        )}
    </div>
    <div class="text">
        <h3>{recipe.data.title}</h3>
        <div class="tags">
            {recipe.data.tags?.map(tag => (
                <Tag>{tag}</Tag>
            ))}
        </div>
        <p>{recipe.data.tagline}</p>
    </div>
</div>

<style lang="scss">
    .content-container {
        height: 140px;
        padding: 1rem 2rem 2rem 2rem;
        background: #3A3A3A;
        border-top: 8px solid #BE5D77;
        border-radius: 0 0 1rem 1rem;
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 2rem;
        color: white;
        position: relative;
    }

    .icons {
        margin-top: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;

        img {
            height: auto;
        }
    }

    .tags {
        display: flex;
        gap: 4px;
    }

    .veggy {
        color: #9dba68;
        font-size: .8em;
    }

    .vegan {
        color: #65b267;
        font-size: .8em;
    }

    h3 {
        margin: 0 0 .5em 0;
    }

    p {
        margin-top: .5em;
        color: #a7a7a7;
    }

    figure {
        margin: 0;
        line-height: 1;
    }
</style>